{% extends "layouts/app.twig" %}
{% block content %}
    <section class="bg-image bg-dark py-5 py-lg-7 px-4 px-lg-0" style="background-color: rgb(52, 53, 56) !important;">
        <img class="background" src="{{ assets('/img/cover.jpg') }}" alt="">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-md-8 mx-auto">
                    <h1 class="display-5 text-white font-weight-bold">
                        Artists
                    </h1>
                </div>
            </div>
        </div>
    </section>

    <div class="site-alert-info">
        <div class="container">
            <h4>Who are Featured Artists</h4>
            <p>
                Featured Artists are people who cooperate with the Quaver Team by making their music available to us in the
                best quality.</p>
            <p>
                Each of these tracks will come with a map template with timing ready so that you can easily start creating a
                map.
            </p>
        </div>
    </div>

    <section id="artists">
        <div class="container">
            <div class="row">
                {% for artist in artists %}
                    <div class="col-lg-3 col-md-6">
                        <div class="artist-card">
                            <div class="artist-image">
                                <img src="{{ assets('img/artists/'~artist.id~'.jpg') }}" alt="{{ artist.name }}">
                            </div>
                            <div class="artist-body">
                                <div class="artist-name">
                                    <a href="{{ baseUrl('/artist/'~artist.id) }}">{{ artist.name }}</a>
                                </div>
                                <div class="artist-tracks">
                                    {{ artist.songs }} Tracks
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block style %}
    <style>
        .site-alert-info {
            background: #242424;
            color: #FFFFFF;
            padding: 12px 0;
        }

        .site-alert-info h4 {
            color: #44D6F5;
            margin: 0 0 10px 0;
            padding: 0;
            font-size: 18px;
        }

        .site-alert-info p {
            padding: 0;
            margin: 0;
            font-size: 15px;
        }

        #artists .artist-card {
            margin-bottom: 40px;
        }

        #artists .artist-card .artist-image img {
            width: 100%;
            height: 100%;
            max-height: 100%;
            max-width: 100%;
        }

        #artists .artist-card .artist-body {
            background: #242424;
            border: 1px solid #353535;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.15);
            border-radius: 0 0 6px 6px;
        }

        #artists .artist-card .artist-name {
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            margin: 5px 0;
        }

        #artists .artist-card .artist-tracks {
            font-size: 16px;
            text-align: center;
            margin: 0 0 5px 0;
            color: #CACACA;
        }
    </style>
{% endblock %}