{% extends "layouts/app.twig" %}
{% block content %}
    <section class="bg-image bg-dark py-5 py-lg-7 px-4 px-lg-0" style="background-color: rgb(52, 53, 56) !important;">
        <img class="background" src="{{ assets('/img/cover.jpg') }}" alt="">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-md-8 mx-auto">
                    <h1 class="display-5 text-white font-weight-bold">
                        {{ title|split("|")[0] }}
                    </h1>
                </div>
            </div>
        </div>
    </section>

    <section id="playlists">
        <div class="container">
            {% include "layouts/alert.twig" %}
            <div class="widget">
                <div class="widget-header d-flex justify-content-between align-items-center">
                    <div>
                        Create Clan
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <form method="POST" accept-charset="UTF-8" enctype="multipart/form-data" action="{{ baseUrl("/clans/create") }}">
                            <div class="form-group">
                                <label>Clan name:</label>
                                <input type="text" class="form-control" name="clan_name" placeholder="Quaver Team" value="" maxlength="15">
                            </div>
                            <div class="form-group">
                                <label>Clan tag:</label>
                                <input type="text" class="form-control" name="clan_tag" placeholder="QT" value="" maxlength="4">
                            </div>
                            <input type="submit" name="clan_submit" class="btn btn-primary" value="Create">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block style %}
    <style>
        #playlists .btn-danger {
            background: #e45454 !important;
            padding: 6px 12px;
        }
    </style>
{% endblock %}